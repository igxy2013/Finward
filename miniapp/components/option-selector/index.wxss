.option-selector-modal { position: fixed; left: 0; right: 0; top: 0; bottom: 0; z-index: 999; }
.mask { position: absolute; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,0.35); }
.panel { position: absolute; left: 0; right: 0; bottom: 0; background: #ffffff; border-top-left-radius: 24rpx; border-top-right-radius: 24rpx; padding: 24rpx; box-shadow: 0 -12rpx 28rpx rgba(0,0,0,0.18); animation: sheet-enter 200ms ease-out; box-sizing: border-box; padding-left: calc(24rpx + constant(safe-area-inset-left)); padding-right: calc(24rpx + constant(safe-area-inset-right)); padding-left: calc(24rpx + env(safe-area-inset-left)); padding-right: calc(24rpx + env(safe-area-inset-right)); }
.drag-handle { width: 88rpx; height: 8rpx; background: #e5e7eb; border-radius: 999rpx; margin: 8rpx auto 16rpx; }
.header { display: flex; align-items: center; justify-content: space-between; }
.title { font-size: 30rpx; font-weight: 600; color: #111827; }
.close-btn { width: 48rpx; height: 48rpx; display: flex; align-items: center; justify-content: center; border-radius: 999rpx; }
.close-icon { width: 32rpx; height: 32rpx; }
.body { max-height: 62vh; overflow-y: auto; -webkit-overflow-scrolling: touch; padding-bottom: calc(24rpx + constant(safe-area-inset-bottom)); padding-bottom: calc(24rpx + env(safe-area-inset-bottom)); }
.grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 18rpx; }
.opt-item { display: flex; flex-direction: column; align-items: center; justify-content: center; gap: 12rpx; padding: 20rpx 12rpx; border-radius: 18rpx; border: 2rpx solid #e5e7eb; background: #F9FAFB; }
.opt-item.active { border-color: #43B176; background: #ecfdf5; }
.opt-icon { width: 72rpx; height: 72rpx; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; background: #ffffff; }
.opt-icon-img { width: 64rpx; height: 64rpx; }
.opt-label { font-size: 26rpx; color: #374151; text-align: center; }

@keyframes sheet-enter {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}
