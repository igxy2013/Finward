.rent-editor-modal { position: fixed; left: 0; right: 0; top: 0; bottom: 0; z-index: 999; }
.mask { position: absolute; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,0.35); }
.panel { position: absolute; left: 50%; top: 50%; transform: translate(-50%, -50%); width: 86%; background: #ffffff; border-radius: 20rpx; padding: 24rpx; box-shadow: 0 12rpx 28rpx rgba(0,0,0,0.2); }
.header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12rpx; }
.title { font-size: 30rpx; font-weight: 600; color: #111827; }
.body { display: flex; flex-direction: column; gap: 16rpx; }
.form-item { display: flex; align-items: center; justify-content: space-between; gap: 12rpx; }
.form-item.row { justify-content: space-between; }
.label { font-size: 26rpx; color: #6b7280; }
.picker-value { font-size: 26rpx; color: #111827; padding: 10rpx 14rpx; background: #F3F4F6; border: 1rpx solid #e5e7eb; border-radius: 12rpx; }
.picker-field { flex: 1; min-width: 0; margin-left: 12rpx; }
.input { flex: 1; min-width: 0; margin-left: 12rpx; border: 1rpx solid #e5e7eb; border-radius: 12rpx; padding: 14rpx; background: #F9FAFB; font-size: 26rpx; color: #111827; }
.textarea { width: 100%; border: 1rpx solid #e5e7eb; border-radius: 12rpx; padding: 14rpx; background: #F9FAFB; font-size: 26rpx; color: #111827; }
.footer { display: flex; gap: 12rpx; margin-top: 20rpx; }
.btn { flex: 1; height: 72rpx; border-radius: 12rpx; font-size: 28rpx; }
.btn.cancel { background: #F3F4F6; color: #374151; border: 1rpx solid #e5e7eb; }
.btn.confirm { background: #10B981; color: #ffffff; border: none; }
