.tabbar-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
  height: 170rpx;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.tabbar-shape {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 0;
  height: 133rpx;
  background-color: #EFF0EF;
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.12);
  z-index: 0;
}

.tabbar-cutout {
  position: absolute;
  left: 50%;
  bottom: 45rpx;
  transform: translateX(-50%);
  width: 160rpx;
  height: 88rpx;
  background-color: #f7f8fa;
  border-bottom-left-radius: 88rpx;
  border-bottom-right-radius: 88rpx;
  z-index: 0; /* 作为背景，不参与点击 */
}

.tabbar {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  bottom: 0;
  height: 133rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 16rpx 18rpx; /* 两端更贴近边缘 */
  box-sizing: border-box;
  z-index: 1; /* 保证 Tab 可点击 */
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #6B7280;
  padding: 10rpx 0;
}

.tab-item-spacer {
  width: 190rpx;
}

.tab-icon {
  width: 46rpx;
  height: 46rpx;
  margin-bottom: 4rpx;
}

.tab-label {
  font-size: 24rpx;
}

.tab-label.active {
  color: #43B176;
  font-weight: 600;
}

.tab-plus {
  position: absolute;
  left: 50%;
  bottom: 46rpx;
  transform: translateX(-50%);
  z-index: 2; /* 高于 tabbar */
}

.tab-plus-inner {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #43B176;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 24rpx rgba(67, 177, 118, 0.55);
  border: 6rpx solid #f7f8fa;
}

.tab-plus-icon {
  font-size: 56rpx;
  color: #ffffff;
}

@keyframes plusTap {
  0% { transform: scale(1); }
  50% { transform: scale(0.92); }
  100% { transform: scale(1); }
}

.tab-plus-inner--pressed {
  animation: plusTap 180ms ease-out;
}
