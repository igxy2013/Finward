.page { padding: 32rpx; }
.form-card { border: 1rpx solid #eef2f7; border-radius: 24rpx; }
.form-card .form-item { display: flex; flex-direction: column; gap: 12rpx; margin-bottom: 24rpx; }
.form-item.row { flex-direction: row; align-items: center; justify-content: space-between; padding-bottom: 16rpx; }
.label { color: #475467; font-size: 26rpx; }
input, textarea, .picker-value { border: 2rpx solid #d0d5dd; border-radius: 12rpx; padding: 20rpx; background: #fff; color: #101828; transition: border-color 0.2s ease, box-shadow 0.2s ease; }
input:focus, textarea:focus { border-color: #43B176; box-shadow: 0 0 0 6rpx rgba(67,177,118,0.15); }
.picker-value { display: flex; align-items: center; justify-content: space-between; position: relative; padding-right: 56rpx; }
.picker-value::after { content: 'â–¾'; position: absolute; right: 20rpx; top: 50%; transform: translateY(-50%); color: #9aa0a6; font-size: 28rpx; }
textarea { min-height: 160rpx; }

.range-tabs { display: flex; background: #EBEBEB; padding: 4rpx; border-radius: 16rpx; margin-bottom: 16rpx; justify-content: center; }
.range-tab { padding: 8rpx 24rpx; font-size: 24rpx; color: #666; border-radius: 12rpx; transition: all 0.2s; }
.range-tab.active { background: #fff; color: #333; font-weight: 600; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05); }
.toggle-tabs { display: flex; gap: 12rpx; }
.pill { padding: 8rpx 24rpx; font-size: 24rpx; border-radius: 999rpx; background: #F5F5F5; color: #666; border: none; font-weight: 500; }
.pill.active { background: #E8F8EF; color: #43B176; }
