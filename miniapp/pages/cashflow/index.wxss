.page { padding: 32rpx; }
.form-card { border: 1rpx solid #eef2f7; border-radius: 24rpx; }
.form-card .form-item { display: flex; flex-direction: column; gap: 12rpx; margin-bottom: 24rpx; }
.form-item.row { flex-direction: row; align-items: center; justify-content: space-between; padding-bottom: 16rpx; }
.label { color: #475467; font-size: 26rpx; }
input, textarea, .picker-value { border: 2rpx solid #d0d5dd; border-radius: 12rpx; padding: 20rpx; background: #fff; color: #101828; transition: border-color 0.2s ease, box-shadow 0.2s ease; }
input:focus, textarea:focus { border-color: #43B176; box-shadow: 0 0 0 6rpx rgba(67,177,118,0.15); }
.picker-value { display: flex; align-items: center; justify-content: space-between; position: relative; padding-right: 56rpx; }
