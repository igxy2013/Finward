.page {
  background-color: #f7f8fa;
  min-height: 100vh;
  padding: 24rpx;
  padding-bottom: 120rpx; /* Space for tabbar */
  box-sizing: border-box;
}

/* Profile Header Card */
.profile-card {
  margin-bottom: 24rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(67, 177, 118, 0.2);
  background: linear-gradient(135deg, #43B176 0%, #369E66 100%);
  color: #fff;
  position: relative;
}

.profile-content {
  padding: 40rpx 32rpx;
}

.profile-main {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 24rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  background-color: #fff;
}

.avatar.placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  border: none;
}

.avatar-icon {
  width: 64rpx;
  height: 64rpx;
  opacity: 0.8;
}

.avatar-overlay-btn {
  position: absolute;
  left: 0;
  top: 0;
  width: 120rpx;
  height: 120rpx;
  padding: 0;
  margin: 0;
  border: none;
  background-color: transparent;
}
.avatar-overlay-btn::after { display: none; }

.avatar-hint {
  position: absolute;
  bottom: -6rpx;
  right: 6rpx;
  padding: 0rpx 12rpx;
  border-radius: 999rpx;
  background: rgba(255,255,255,0.25);
  color: #fff;
  font-size: 20rpx;
  backdrop-filter: blur(4px);
}

.edit-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.edit-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.85;
  filter: grayscale(100%) brightness(90%) contrast(95%);
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.user-desc {
  font-size: 26rpx;
  opacity: 0.8;
}

/* Edit Mode */
.edit-panel {
  margin-top: 32rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 24rpx;
  padding: 24rpx;
  backdrop-filter: blur(10px);
}



.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  font-size: 24rpx;
  margin-bottom: 12rpx;
  display: block;
  opacity: 0.8;
}

.edit-input {
  background-color: rgba(255, 255, 255, 0.91);
  border-radius: 12rpx;
  height: 80rpx;
  padding: 0 24rpx;
  color: #000000ff;
  font-size: 30rpx;
}

.edit-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.action-btn.cancel {
  background-color: rgba(255,255,255,0.2);
  color: #fff;
}

.action-btn.save {
  background-color: #fff;
  color: #43B176;
  font-weight: 600;
}

/* Login Button */
.login-area {
  margin-top: 32rpx;
}

.login-btn {
  background-color: #fff;
  color: #43B176;
  border-radius: 44rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 600;
  gap: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
}

/* General Card Style */
.section-card, .menu-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 0;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  overflow: hidden;
}

.card-header {
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.card-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background-color: #f0fdf4;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  color: #43B176;
  font-size: 24rpx;
  font-weight: 500;
}

.action-icon {
  width: 28rpx;
  height: 28rpx;
}

/* Invite Box */
.invite-box {
  margin: 24rpx 32rpx;
  background-color: #f9fafb;
  border: 1rpx dashed #d1d5db;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.invite-content {
  display: flex;
  flex-direction: column;
}

.invite-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
}

.invite-code {
  font-size: 32rpx;
  font-weight: bold;
  font-family: monospace;
  color: #374151;
  letter-spacing: 2rpx;
}

.invite-expire {
    font-size: 20rpx;
    color: #9ca3af;
    margin-top: 4rpx;
}

.copy-btn {
  background-color: #43B176;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 12rpx;
}

/* Member List */
.member-list {
  padding: 0 32rpx;
}

.member-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f3f4f6;
  margin-right: 20rpx;
}

.member-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.member-name {
  font-size: 28rpx;
  color: #111827;
  font-weight: 500;
}

.member-role {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 4rpx;
}

.member-action {
  padding: 16rpx;
}

.remove-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
}

.empty-state {
  padding: 40rpx;
  text-align: center;
  color: #9ca3af;
  font-size: 26rpx;
}

/* Join Area */
.join-area {
  padding: 24rpx 32rpx;
  background-color: #fafafa;
  border-top: 1rpx solid #f0f0f0;
}

.join-input-wrapper {
  display: flex;
  background-color: #fff;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  overflow: hidden;
  height: 80rpx;
}

.join-input {
  flex: 1;
  height: 100%;
  padding: 0 24rpx;
  font-size: 28rpx;
}

.join-submit {
  width: 120rpx;
  background-color: #e5e7eb;
  color: #9ca3af;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s;
}

.join-submit.active {
  background-color: #43B176;
  color: #fff;
}

/* Menu Card */
.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s;
}

.menu-item:active {
  background-color: #f9fafb;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon-bg {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.menu-icon-bg.blue { background-color: #e0f2fe; }
.menu-icon-bg.purple { background-color: #f3e8ff; }
.menu-icon-bg.orange { background-color: #ffedd5; }

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-icon-bg.blue .menu-icon { opacity: 0.85; filter: grayscale(100%) brightness(45%) contrast(95%); }
.menu-icon-bg.purple .menu-icon { opacity: 0.85; filter: grayscale(100%) brightness(45%) contrast(95%); }
.menu-icon-bg.orange .menu-icon { opacity: 0.85; filter: grayscale(100%) brightness(45%) contrast(95%); }


.menu-label {
  flex: 1;
  font-size: 30rpx;
  color: #1f2937;
  font-weight: 500;
}

.arrow-right {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

/* Logout Button */
.logout-btn {
  background-color: #fff;
  color: #ef4444;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 24rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  border: 1rpx solid #fee2e2;
}

/* Modal Styling */
.modal-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-backdrop {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  backdrop-filter: blur(4px);
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 640rpx;
  background-color: #fff;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
  animation: modalPop 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

@keyframes modalPop {
  from { transform: scale(0.9); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.modal-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #111827;
}

.close-icon-area {
    padding: 10rpx;
}

.close-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.4;
}

.modal-form {
  padding: 32rpx;
}

.form-field {
  margin-bottom: 32rpx;
}

.form-field:last-child {
  margin-bottom: 0;
}

.field-label {
  display: block;
  font-size: 26rpx;
  color: #4b5563;
  margin-bottom: 16rpx;
}

.field-input {
  width: 100%;
  height: 88rpx;
  background-color: #f9fafb;
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #111827;
  box-sizing: border-box;
  transition: border-color 0.2s;
}

.field-input:focus {
  border-color: #43B176;
  background-color: #fff;
}

.modal-footer {
  padding: 32rpx;
  background-color: #fafafa;
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-btn.cancel {
  background-color: #fff;
  color: #4b5563;
  border: 1rpx solid #e5e7eb;
}

.modal-btn.confirm {
  background-color: #43B176;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(67, 177, 118, 0.3);
}
