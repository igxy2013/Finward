.page { padding: 24rpx; background: #f7f7f7; min-height: 100vh; box-sizing: border-box; }
.card { background: #ffffff; border-radius: 24rpx; padding: 24rpx; margin-bottom: 24rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.06); }
.section-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx; }
.section-title { font-size: 32rpx; font-weight: 600; color: #111827; }
.toggle-tabs { display: flex; gap: 16rpx; }
.pill { padding: 16rpx 24rpx; border-radius: 999rpx; background: #F3F4F6; color: #6b7280; font-size: 26rpx; }
.pill.active { background: #ECFDF5; color: #10B981; }
.list { display: block; }
.chip { display: inline-flex; align-items: center; gap: 10rpx; padding: 12rpx 18rpx; border-radius: 999rpx; background: #F3F4F6; color: #374151; font-size: 26rpx; margin: 8rpx 8rpx 0 0; }
.chip-delete { width: 32rpx; height: 32rpx; opacity: 0.55; }
.chip-delete:active { opacity: 0.9; }
.input-row { display: flex; gap: 12rpx; margin-top: 16rpx; }
.text-input { flex: 1; height: 72rpx; border-radius: 14rpx; border: 2rpx solid #e5e7eb; padding: 0 20rpx; font-size: 28rpx; background: #ffffff; color: #111827; }
.small-btn { height: 72rpx; border-radius: 14rpx; padding: 0 24rpx; font-size: 26rpx; display: inline-flex; align-items: center; justify-content: center; min-width: 120rpx; line-height: 1.2; }
.small-btn::after { border: none; }
.small-btn:active { opacity: 0.88; }
.small-btn.primary { background: #43B176; color: #ffffff; }
