.page { padding: 32rpx; }
.form-card { border: 1rpx solid #eef2f7; border-radius: 24rpx; padding-bottom: 16rpx; }
.form-card .form-item { display: flex; flex-direction: column; gap: 12rpx; margin-bottom: 24rpx; }
.label { color: #475467; font-size: 26rpx; }
input, textarea, .picker-value { border: 2rpx solid #d0d5dd; border-radius: 12rpx; padding: 20rpx; background: #fff; color: #101828; }
input:focus, textarea:focus { border-color: #43B176; box-shadow: 0 0 0 6rpx rgba(67,177,118,0.15); }
.picker-value { display: flex; align-items: center; justify-content: space-between; position: relative; padding-right: 56rpx; }
.picker-value::after { content: 'â–¾'; position: absolute; right: 20rpx; top: 50%; transform: translateY(-50%); color: #9aa0a6; font-size: 28rpx; }
.list-card { border: 1rpx solid #eef2f7; border-radius: 24rpx; padding: 24rpx; margin-top: 24rpx; }
.list-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12rpx; }
.list-title { color: #111827; font-size: 28rpx; font-weight: 600; }
.list-container { display: flex; flex-direction: column; gap: 8rpx; }
.list-item { display: flex; gap: 12rpx; padding: 16rpx; border-radius: 12rpx; background: #fff; border: 1rpx solid #e5e7eb; align-items: center; }
.item-main { flex: 1; }
.item-top { display: flex; align-items: center; justify-content: space-between; }
.item-name { color: #111827; font-size: 26rpx; font-weight: 600; }
.item-amount { font-size: 28rpx; font-weight: 700; }
.item-meta { margin-top: 4rpx; display: flex; gap: 14rpx; color: #6b7280; font-size: 22rpx; }
.item-actions { display: flex; gap: 12rpx; }
