.page {
  padding: 32rpx;
}

.form-card .form-item {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.label {
  color: #475467;
  font-size: 26rpx;
}

input,
textarea,
.picker-value {
  border: 1rpx solid #e4e7ec;
  border-radius: 12rpx;
  padding: 20rpx;
  background: #fff;
  color: #101828;
}

textarea {
  min-height: 160rpx;
}

.readonly-value {
  border: 1rpx dashed #d0d5dd;
  border-radius: 12rpx;
  padding: 20rpx;
  background: #f9fafb;
  color: #101828;
}

.form-card { border: 1rpx solid #eef2f7; border-radius: 24rpx; }
.form-card .form-item { }
input, textarea, .picker-value { border: 2rpx solid #d0d5dd; transition: border-color 0.2s ease, box-shadow 0.2s ease; }
input:focus, textarea:focus { border-color: #43B176; box-shadow: 0 0 0 6rpx rgba(67,177,118,0.15); }
.picker-value { display: flex; align-items: center; justify-content: space-between; position: relative; padding-right: 56rpx; }
.picker-value::after { content: '▾'; position: absolute; right: 20rpx; top: 50%; transform: translateY(-50%); color: #9aa0a6; font-size: 28rpx; }

.form-item.row { flex-direction: row; align-items: center; justify-content: space-between; }
.rental-card { border: 1rpx solid #eef2f7; border-radius: 24rpx; padding: 20rpx; margin-top: 16rpx; }


.rent-menu { margin-top: 16rpx; padding: 24rpx 20rpx; background: #F9FAFB; border-radius: 16rpx; border: 1rpx solid #F3F4F6; }
.rent-menu-row { display: flex; align-items: center; justify-content: space-between; gap: 16rpx; }
.rent-menu-title { font-size: 26rpx; font-weight: 500; color: #374151; }
.rent-menu-right { display: flex; align-items: center; gap: 4rpx; }
.rent-menu-tip { font-size: 26rpx; color: #9ca3af; }
.rent-menu-arrow { width: 32rpx; height: 32rpx; opacity: 0.4; }
.rent-menu--pressed { background: #F3F4F6; }

/* 类型切换 Tabs 与添加收支页面对齐 */
.toggle-tabs { display: flex; gap: 24rpx; margin-top: 8rpx; }
.pill { flex: 1; text-align: center; padding: 24rpx 0; font-size: 30rpx; border-radius: 20rpx; background: #f1f5f9; color: #64748b; border: 2rpx solid transparent; transition: all 0.2s; font-weight: 500; }
.pill.asset.active { background: #ecfdf5; color: #10B981; border-color: #A7F3D0; font-weight: 600; }
.pill.liability.active { background: #fef2f2; color: #ef4444; border-color: #fca5a5; font-weight: 600; }

